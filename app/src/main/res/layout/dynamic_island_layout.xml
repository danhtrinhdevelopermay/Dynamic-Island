<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dynamicIslandCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardBackgroundColor="@color/dynamic_island_bg"
    app:cardCornerRadius="@dimen/dynamic_island_corner_radius"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minWidth="@dimen/dynamic_island_min_width"
        android:padding="@dimen/padding_small">

        <!-- Collapsed State - Simple notification preview -->
        <LinearLayout
            android:id="@+id/collapsedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/padding_small"
            android:paddingVertical="4dp">

            <!-- App Icon -->
            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:layout_marginEnd="@dimen/padding_small"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_launcher_foreground" />

            <!-- App Name -->
            <TextView
                android:id="@+id/appName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/dynamic_island_text_primary"
                android:textSize="@dimen/text_body"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Messages" />

            <!-- Notification Indicator -->
            <View
                android:id="@+id/notificationDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/notification_dot"
                android:layout_marginStart="@dimen/padding_small" />

        </LinearLayout>

        <!-- Expanded State - Full notification content -->
        <LinearLayout
            android:id="@+id/expandedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingHorizontal="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_medium"
            tools:visibility="visible">

            <!-- Header with App Icon and Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/padding_small">

                <ImageView
                    android:id="@+id/expandedAppIcon"
                    android:layout_width="@dimen/icon_medium"
                    android:layout_height="@dimen/icon_medium"
                    android:layout_marginEnd="@dimen/padding_small"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ic_launcher_foreground" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/expandedAppName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dynamic_island_text_secondary"
                        android:textSize="@dimen/text_caption"
                        android:textAllCaps="true"
                        tools:text="MESSAGES" />

                    <TextView
                        android:id="@+id/notificationTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dynamic_island_text_primary"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="John Doe" />

                </LinearLayout>

                <!-- Time -->
                <TextView
                    android:id="@+id/notificationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dynamic_island_text_secondary"
                    android:textSize="@dimen/text_caption"
                    tools:text="now" />

            </LinearLayout>

            <!-- Notification Content -->
            <TextView
                android:id="@+id/notificationContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dynamic_island_text_primary"
                android:textSize="@dimen/text_body"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/padding_medium"
                tools:text="Hey! How are you doing today? I wanted to ask you about..." />

            <!-- Action Buttons Container -->
            <LinearLayout
                android:id="@+id/actionButtonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/actionButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:background="@drawable/button_negative"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/padding_medium"
                    android:textColor="@color/dynamic_island_text_primary"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/padding_small"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="Decline" />

                <TextView
                    android:id="@+id/actionButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:background="@drawable/button_positive"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/padding_medium"
                    android:textColor="@color/dynamic_island_text_primary"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="Accept" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
